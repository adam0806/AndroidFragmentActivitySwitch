<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
    android:background="#ff0000"
    android:orientation="vertical"
    android:clickable="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment, addtobackstack: false, replace: false"
        android:id="@+id/buttonNext1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment, addtobackstack: true, replace: false"
        android:id="@+id/buttonNext2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment, addtobackstack: false, replace: true"
        android:id="@+id/buttonNext3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment, addtobackstack: true, replace: true"
        android:id="@+id/buttonNext4"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left is SlideMenu, Below is ViewPager"
        android:textSize="14dp"
        android:background="#FFFFFF"/>
    <com.example.adam.fragmentactivitytest.MyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#aaaaaa"/>
</LinearLayout>